<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F01A1A1E"
    >

    <ImageView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#6801070E"
        android:src="@drawable/pngegg"
        app:tint="#8FFFFFFF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/singin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SIGN IN"
        android:layout_marginTop="30dp"
        android:textSize="30dp"
        app:layout_constraintTop_toBottomOf="@id/logo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#8FFFFFFF"
        />

    <TextView
        android:id="@+id/namaaku"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Steam account name"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/singin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#8FFFFFFF"
        />

    <EditText
        android:id="@+id/ETName"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:background="#2F2F37"
        android:padding="13dp"
        android:textColor="#8FFFFFFF"
        app:cornerRadius="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/namaaku" />

    <TextView
        android:id="@+id/TVPassword"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:textColor="#8FFFFFFF"
        android:text="Password"
        android:textSize="17dp"
        app:layout_constraintTop_toBottomOf="@id/ETName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="15dp"/>

    <EditText
        android:id="@+id/ETPassword"
        android:layout_width="340dp"
        android:layout_height="50dp"
        android:padding="13dp"
        android:inputType="textPassword"
        app:cornerRadius="2dp"
        app:layout_constraintTop_toBottomOf="@id/TVPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="#2F2F37"
        android:textColor="#8FFFFFFF"/>

    <Button
        android:id="@+id/BtnSignin"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:text="Sign in"
        app:cornerRadius="4dp"
        android:textSize="23dp"
        android:backgroundTint="#03A9F4"
        app:layout_constraintTop_toBottomOf="@id/ETPassword"
        android:layout_marginTop="38dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginRight="55dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Forgot your password?"
        android:textStyle="bold"
        android:textSize="15dp"
        app:layout_constraintTop_toBottomOf="@id/BtnSignin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#8FFFFFFF"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Join Steam and discover thousands of games to play"
        android:textAlignment="center"
        android:textColor="#8FFFFFFF"
        app:layout_constraintBottom_toTopOf="@id/TVlear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/TVlear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn More"
        android:textColor="#8FFFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="45sp"
        android:textStyle="bold"/>





</androidx.constraintlayout.widget.ConstraintLayout>